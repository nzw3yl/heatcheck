
   <tr>
     <td><%= link_to heat_log.id, heat_log_path(heat_log) %></td>
     <td><%= heat_log.transaction_date %></td>
     <td><%= heat_log.entity_type %></td>
     <td><%= heat_log.entity_id %></td>
     <td><%= temperature_button(heat_log.temperature) %></td>
     <td><% if Measure.find_by_id(heat_log.measure_id) %>
           <%= Measure.find_by_id(heat_log.measure_id).content %>
         <% end %>
	 </td>
     <td>
       <%= link_to t('.edit', :default => t("helpers.links.edit")),
                   edit_heat_log_path(heat_log), :class => 'btn btn-mini' %>
       <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                   heat_log_path(heat_log),
                   :method => :delete,
                   :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                   :class => 'btn btn-mini btn-danger' %>
     </td>
   </tr>