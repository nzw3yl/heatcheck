<%- model_class = HeatLog -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:transaction_date) %>:</strong></dt>
  <dd><%= @heat_log.transaction_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:entity_type) %>:</strong></dt>
  <dd><%= @heat_log.entity_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:entity_id) %>:</strong></dt>
  <dd><%= @heat_log.entity_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:temperature) %>:</strong></dt>
  <dd><%= @heat_log.temperature %></dd>
  <dt><strong><%= model_class.human_attribute_name(:measure_id) %>:</strong></dt>
  <dd><%= @heat_log.measure_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:provider_id) %>:</strong></dt>
  <dd><%= @heat_log.provider_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              heat_logs_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_heat_log_path(@heat_log), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              heat_log_path(@heat_log),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
