<%- model_class = Customer -%>
<div class="page-header">
  <h1><%=@customer.name %> <br/><small> <%= @customer.description %></small></h1>
</div>

<ul class="nav nav-tabs">
  <li><a href=<%=customer_path(@customer)%>>Current Issues</a></li>
  <li class="active"><a href="#">Heat Map</a></li>
  <li><a href=<%= show_contacts_customer_path %>>Contacts</a></li>
</ul>
<h3>Heat Map</h3>
<table class="table table-striped">
  <thead>
	<th>Measure</th>
	<th>Temperature</th>
  </thead>
  <tbody>
	<% Measure.all.each do |measure| %>
	<% @temp_value = temperature_to_integer(@customer.send(measure.content.downcase))%>
	<tr>
	  <td><%= measure.content %></td>
	  <td><%= temperature_button(@temp_value) %>
	</tr>
	<% end %>
  <tbody>
</table>