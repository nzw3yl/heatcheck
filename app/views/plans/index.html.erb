
<h3><%= @owner_name %></h3>
<h4>Issue: <%= @issue.content %></h4>
<% if @incomplete_plans.empty? && @complete_plans.empty? %>
  	<div class="alert alert-block alert-info">
	  <button type="button" class="close" data-dismiss="alert">&times;</button>
		<h4>Create an Action Plan!</h4>
        Assign tasks to the contacts for a customer or partner and track their completion status here.
	</div>
<% end %>

<%= link_to "New Action Item", new_issue_plan_path(@issue), id: "new_link", remote: true, :class => "btn btn-info" %>


	<h3>Incomplete Action Items</h3>
	<div class="plans">
	 <table class="table table-striped">
	   <thead>
		<tr>
		  <th>Complete</th>
		  <th>Description</th>
		  <th>Owner</th>
		  <th>Remove</th>
		</tr>
	   </thead>
	   <tbody  id="incomplete_plans">
	  <%= render @incomplete_plans %>
	   </tbody>
	 </table>
	</div>

	<h3>Completed Action Items</h3>
	<div class="plans">
	 <table class="table table-striped">
	   <thead>
		<tr>
		  <th>Complete</th>
		  <th>Description</th>
		  <th>Owner</th>
		  <th>Remove</th>
		</tr>
	   </thead>
	   <tbody  id="complete_plans">
	  <%= render @complete_plans %>
	  </tbody>
	</table>
   </div>

