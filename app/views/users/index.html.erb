<h3>Users</h3>
<div class="span12">
  <table class="table table-condensed">
    <thead>
	<tr>
		<th>First name</th>
		<th>Last name</th>
		<th>Email</th>
		<th>Registered</th>
		<th>Role</th>
		<th></th>
		<th></th>
    </tr>
    </thead>
	<tbody>
	  <% @users.each do |user| %>
	  <tr>
	    <td><%= link_to user.first_name, user %></td>
    	<td><%= link_to user.last_name, user %></td>
	    <td><%= user.email %></td>
	    <td><%= user.created_at.to_date %></td>
	    <td><%= user.roles.first.name.titleize unless user.roles.first.nil? %></td> 
	    <td>
	      <a data-toggle="modal" href="#role-options-<%= user.id %>" class="btn btn-mini btn-info" type="button">Role</a>
		  <%= render user %> 
		</td>
		<td><%= link_to("Delete", user_path(user), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini btn-danger') unless user == current_user %></td>
		</tr>
	  <% end %>
	</tbody>
  </table>
</div>
