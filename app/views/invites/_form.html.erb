<%= simple_form_for(@invite) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.input :provider_id %>
    <%= f.input :invitee_email %>
    <%= f.input :access_code %>
    <%= f.input :accepted %>
    <%= f.input :valid_thru %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
