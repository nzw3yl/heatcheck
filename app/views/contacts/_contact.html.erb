<div class="row-fluid">	
	<div class="well span4 ">
		<span class="well well-small pull-right">
			<%= link_to polymorphic_path([:new, @contactable, :contact], parent_id: contact.id), :class => "btn btn-info btn-mini" do %>
			   <i class=" icon-arrow-down"></i><i class=" icon-user"></i>
			<% end %>	|
		    <%= link_to polymorphic_path([:edit, @contactable, contact]), :class => 'btn btn-mini' do %>
			   <i class=" icon-edit icon-large"></i>
		    <% end %>	|
		      <%= link_to polymorphic_path([@contactable, contact]),
		                  :method => :delete,
		                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
		                  :class => 'btn btn-mini btn-danger' do %>
		        <i class=" icon-remove icon-large"></i>
		      <% end %>
	    </span>
       <strong><%= contact.name %></strong><br/>
       <%= contact.title %><br/>
       <%= contact.team %>
     </div>
</div>
