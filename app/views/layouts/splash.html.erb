<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Heatcheck" %></title>
    <%= csrf_meta_tags %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js" type="text/javascript"></script>
    <![endif]-->

    <%= stylesheet_link_tag "application", :media => "all" %>

    <!-- For third-generation iPad with high-resolution Retina display: -->
    <!-- Size should be 144 x 144 pixels -->
    <%= favicon_link_tag 'apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144' %>

    <!-- For iPhone with high-resolution Retina display: -->
    <!-- Size should be 114 x 114 pixels -->
    <%= favicon_link_tag 'apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114' %>

    <!-- For first- and second-generation iPad: -->
    <!-- Size should be 72 x 72 pixels -->
    <%= favicon_link_tag 'apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72' %>

    <!-- For non-Retina iPhone, iPod Touch, and Android 2.1+ devices: -->
    <!-- Size should be 57 x 57 pixels -->
    <%= favicon_link_tag 'apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png' %>

    <!-- For all other devices -->
    <!-- Size should be 32 x 32 pixels -->
    <%= favicon_link_tag 'favicon.ico', :rel => 'shortcut icon' %>
  </head>
  <body class="#{controller_name} #{action_name} splash" >

    <div class="navbar navbar-fluid-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="#">Heatcheck</a>
          <div class="container-fluid nav-collapse">
	        <ul class="nav nav-pills">
		      <% if !user_signed_in? %>
	            <li><%= link_to "About", "#" %></li>
	            <li><%= link_to "Contact Us", "#"  %></li>
	            <li><%= link_to "Help", "#" %></li>
	          <% else %>
	            <%= link_to "#", :class => 'btn' do  %>
		            <i class="icon-tasks icon-large"></i>
		            <span class="hidden-phone">Projects</span>
		          <% end %>
	            <%= link_to root_path, :class => 'btn' do  %>
		            <i class="icon-group icon-large"></i>
		            <span class="hidden-phone">People</span>
		          <% end %>
		       	<%= link_to "#", :class => 'btn' do  %>
		            <i class="icon-sitemap icon-large"></i>
		            <span class="hidden-phone">Organization</span>
		          <% end %>
	          <% end %>
	        </ul>
            <ul class="nav pull-right">
			    <% if user_signed_in? %>
			      <li class="dropdown">
				    <a class="dropdown-toggle", data-toggle="dropdown", data-target="#", href="#">
					  <span class="icon-cog icon-large"></span>
					  <b class="caret"></b>  
					</a>
					<ul class="dropdown-menu">
					  <li>
						<%= link_to t(".logout"), destroy_user_session_path, :method=>'delete'%>
					  </li>
					  <li>
						<%= link_to t(".edit_account"), edit_user_registration_path %>
					  </li>
					</ul>
				  </li>
			    <% end %>
			  </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
    <div id="main">
	  <div class="container">
	    <div class="test">
		  <div class="row-fluid">
			<div class="span12">
			  <div class="row-fluid">
				<div class="span9">
				  <div class="row-fluid">
				    <div id="splash-content" class="splash-text hidden-phone">
	                  <h3> Is it hot in here?</h3>
	                </div>
	              </div>
                </div>
                <div class="span3">
                  <div class="row well">
                    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }, :namespace => 'signin') do |f| %>
                      <%= f.input :email, :label => false, :autofocus => true %>
                      <%= f.input :password, :label => false, :hint => false %>
                      <%= f.input :remember_me, :as => :boolean, :wrapper => :inline_checkbox if devise_mapping.rememberable? %>
                      <%= f.button :submit, "Sign In", :class => 'btn btn-primary' %>
                      <%= link_to "Forgot your password?", new_password_path('user') %>
                    <% end %>
                  </div>
                  <div class="row well">
                    <h3>
                      <%= t ".sign_up" %>
                    </h3>
                    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical' }, :namespace => 'signup') do |f| %>
                      <%= f.error_notification %>
                      <%= display_base_errors resource %>
                      <%= f.input :email, :label => false, :required => true %>
                      <%= f.input :password, :label => false, :hint => false, :required => true %>
                      <%= f.input :password_confirmation, :label => false, :required => true %>
                      <%= f.button :submit, :class => 'btn btn-primary' %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row=fluid">

      </div>
      <div class="row=fluid">
        <div class="span8 offset4 splash-text">
          <footer>
	        <p>&copy; Company 2013</p>
	      </footer>
	    </div>
	  </div>
	</div>
	    <!-- Javascripts
	    ================================================== -->
	    <!-- Placed at the end of the document so the pages load faster -->
	    <%= javascript_include_tag "application" %>
  </body>
</html>